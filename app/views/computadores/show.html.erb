<html>
<head>
  <title>Mas información</title>
</head>
<div class="card mb-4 shadow ">
  <%= form_for(@orden_item, remote: true) do |f| %>
    <%= f.hidden_field :producto_id , value: @computador.producto.id %>
    <div class="card-header py-3">
      <h3 class="text-info text-uppercase mb-1 font-weight-bold"><%= link_to :back, class:"nav-link" do%>
          <i class="fas fa-arrow-circle-left"> </i>
          <%= @computador.producto.marca %>
        <% end %></h3>
    </div>
    <div class="row card-body">
      <div class="col col-lg-4 col-md-6">
        <img src="../<%= @computador.producto.imagen %>" width="330" height="340" >
      </div>
      <div class="col col-lg-8 col-md-6">
        <h4 class="text-info text-uppercase mb-1 font-weight-bold"><%= @computador.producto.linea %></h4>
        <hr>
        <div class="form-inline">
          <label class="text-info text-uppercase mb-1 font-weight-bold">Cantidad</label>
          <div class="col col-lg-1">
            <%= f.number_field :cantidad, value: 1, min: 1, class: 'form-control' %>
          </div>
        </div>
        <hr>
        <b>Tipo:</b> <%= @computador.tipo%><br>
        <b>Tipo de Red:</b> <%= @computador.computo.tipoRed%><br>
        <b>RAM: </b> <%= @computador.computo.RAM %> <br>
        <b>Almacenamiento: </b> <%= @computador.computo.almacenamiento%> <br>
        <b>Procesador: </b> <%= @computador.computo.almacenamiento%> <br>
        <b>Precio:</b><%= @computador.producto.precio %> <br>
        <hr>
        <div class="row justify-content-end">
          <%= button_tag(type: 'submit', class: "btn btn-info btn-icon-split") do %>
          <span class="icon text-white-50">
          <i class="fas fa-shopping-cart"></i>
          </span>
            <span class="text">Añadir al carrito</span>
          <% end %>
        </div>

      </div>

    </div>
  <% end %>
</div>