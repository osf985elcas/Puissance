<div class="text-center">
  <h2 class="h4 text-gray-900 mb-4">Crear Cuenta</h2>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'user'}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-group row">
    <div class="col-sm-6 mb-3 mb-sm-0">
      <%= f.text_field :nombres ,class:"form-control form-control-user", placeholder:"Nombres" %>
    </div>
    <div class="col-sm-6">
      <%= f.text_field :apellidos ,class:"form-control form-control-user", placeholder:"Nombres" %>
    </div>
  </div>
  <div class="form-group ">
    <%= f.email_field :email, autocomplete: "email", class:"form-control form-control-user", placeholder:"Correo" %>
  </div>
  <div class="form-group ">
    <%= f.text_field :direccion ,class:"form-control form-control-user", placeholder:"Direccion" %>
  </div>
  <div class="form-group row">
    <div class="col-sm-6 mb-3 mb-sm-0">
      <%= f.text_field :telefonoFijo ,class:"form-control form-control-user", placeholder:"Teléfono 1" %>
    </div>
    <div class="col-sm-6">
      <%= f.text_field :telefonoMovil ,class:"form-control form-control-user", placeholder:"Teléfono 2" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-6 mb-3 mb-sm-0">
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control form-control-user",placeholder:"Contraseña" %>
    </div>
    <div class="col-sm-6">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control form-control-user", placeholder:"Repita Contraseña"%>
    </div>
  </div>
  <div class="form-group row">
    <%= f.submit "Registrarse", class: "btn btn-info btn-user btn-block"%>
  </div>
<% end %>
<hr>
<div class="text-center">
  <%= render "devise/shared/links" %>
</div>
